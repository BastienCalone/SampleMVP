<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height"
    android:layout_margin="@dimen/default_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecondary"
        android:padding="@dimen/default_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sale_image"
            android:layout_width="@dimen/short_imageview_display"
            android:layout_height="match_parent"
            app:civ_border_color="@color/colorSecondaryDark"
            app:civ_border_width="@dimen/default_circle_border" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sale_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:textColor="@color/textColor"
            android:textSize="@dimen/default_text_size"
            app:layout_constraintLeft_toRightOf="@+id/sale_image"
            tools:text="sale text" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>